  "keywords": [],
  "author": "",
  "license": "MIT",
  "description": "Slack Bolt アプリケーション（TypeScript）",
  "dependencies": {
    "@slack/bolt": "^4.6.0",
    "better-sqlite3": "^12.6.2",
    "csv-stringify": "^6.6.0",
    "dotenv": "^17.2.3",
    "pino": "^10.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.19.7",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
